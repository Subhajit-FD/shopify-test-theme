{% if section.settings['show-announcement'] %}
  <section>
    <div class="announcement-bar">
      {% if section.blocks.size > 0 %}
        <div class="swiper mySwiper">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <li class="swiper-slide">
                <span>{{ block.settings.heading }}</span>
                <a href="{{ block.settings.link }}">{{ block.settings.link_text }}</a>
              </li>
            {% endfor %}
          </div>
        </div>
      {% else %}
        <ul class="d-text">
          <li class="swiper-slide">Welcome to the store</li>
        </ul>
      {% endif %}
    </div>
  </section>
{% endif %}


<style>
  .announcement-bar {
    background: {{ section.settings.background }};
    color: {{ section.settings.text_color }}
  }

  .d-text {
    width: 100%;
    height: 40px;
  }

  .swiper {
    width: 100%;
    height: 40px;
  }

  .swiper-slide {
    font-size: 18px;
    background: {{ section.settings.background }};
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .swiper-slide span {
    margin-right: 10px;
  }

  .swiper-slide a {
    text-decoration: none;
    color: inherit;
  }

  @media (max-width: 600px) {
    .swiper-slide {
      font-size: 14px;
    }
  }
</style>



{% schema %}
  {
    "name": "Announcement Bar",
    "settings": [
      {
        "type": "checkbox",
        "id": "show-announcement",
        "label": "Show Announcement",
        "default": true
      }, {
        "type": "color",
        "id": "background",
        "label": "Background Color",
        "default": "#000000"
      }, {
        "type": "color",
        "id": "text_color",
        "label": "Text Color",
        "default": "#ffffff"
      }
    ],
    "blocks": [
      {
        "name": "Text",
        "type": "text",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          }, {
            "type": "url",
            "id": "link",
            "label": "Link URL"
          }, {
            "type": "text",
            "id": "link_text",
            "label": "Link Text"
          }
        ]
      }
    ]
  }
{% endschema %}